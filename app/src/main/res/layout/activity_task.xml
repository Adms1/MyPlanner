            android:layout_weight="0.6"
            android:text="Wednesday 05-01-2022"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/weekly_etDay3" />

        <EditText
            android:id="@+id/weekly_etDay4"
