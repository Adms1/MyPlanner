            android:layout_weight="0.6"
            android:text="Friday 07-01-2022"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/weekly_etDay5" />

        <EditText
            android:id="@+id/weekly_etDay6"
            android:layout_width="match_parent"
